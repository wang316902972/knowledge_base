# FAISS向量数据库环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# 环境配置
ENVIRONMENT=development  # development, production, test

# 业务配置
BUSINESS_ID=default
SERVICE_NAME=faiss-vector-db

# 数据存储配置
FAISS_DATA_DIR=./data
FAISS_INDEX_FILE=
FAISS_METADATA_FILE=

# 嵌入模型配置
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DIM=384

# FAISS索引配置
FAISS_INDEX_TYPE=FlatIP  # FlatIP, FlatL2, IVFFlat, HNSW
FAISS_NLIST=100          # IVF索引聚类数量
FAISS_NPROBE=10          # IVF索引搜索探测数量
FAISS_HNSW_M=16          # HNSW索引连接数
FAISS_EF_CONSTRUCTION=200  # HNSW构建时的搜索深度
FAISS_EF_SEARCH=50       # HNSW搜索时的深度

# 文本处理配置
MAX_CHUNK_SIZE=2000
MIN_CHUNK_SIZE=50
DEFAULT_CHUNK_SIZE=500
DEFAULT_CHUNK_OVERLAP=50

# 批处理配置
BATCH_SIZE=32
MAX_BATCH_TEXTS=100

# 搜索配置
MAX_TOP_K=50
DEFAULT_TOP_K=5

# 性能配置
AUTO_SAVE=false
SAVE_INTERVAL=100

# 安全配置
MAX_CONTENT_LENGTH=50000
MAX_QUERY_LENGTH=1000

# API配置
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# GPU配置
USE_GPU=false
GPU_ID=0